{"$schema": "https://vega.github.io/schema/vega/v3.0.json",
      "description": "A simple bar chart with embedded data.",
      "title": "Don't Look Like a Vega Chart But I Am",
      "autosize": "pad",
      "padding": 5,
      "background": "#cec",
      "signals": [
        {
          "name": "width",
          "update": "300"
        },
        {
          "name": "height",
          "update": "200"
        },
        {
          "name": "textlabel",
          "value": "Click on one of messages above.",
          "on": [
            {
              "events": ".label:click",
              "update": "event.currentTarget.innerText",
              "force":  true
            }
          ]
        },
        {
          "name": "xmove",
          "value": 12,
          "on": [
            {
              "events": "mousemove",
              "update": "x()",
              "force": true
            }
          ]
        },
        {
          "name": "clock",
          "on": [
            {
              "events": "window:updateclock",
              "update": "event.detail.time"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "text",
          "encode": {
            "enter": {
              "x": {"value": 0},
              "y": {"value": 0}
            },
            "update": {
            	"text": {"signal": "textlabel"}
        		}
        	}
        },
        {
          "type": "text",
          "encode": {
            "enter": {
              "x": {"value": 0},
              "y": {"value": 20}
            },
            "update": {
              "text": {"signal": "xmove"}
            }
          }
        },
        {
          "type": "text",
          "encode": {
            "enter": {
              "x": {"value": 0},
              "y": {"value": 40}
            },
            "update": {
              "text": {"signal": "clock"}
            }
          }
        }
      ]
    }